<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/login_icon"
            android:background="@color/color_transparent"
            android:layout_marginTop="@dimen/distance_login_margin_to_top"
            android:layout_centerHorizontal="true"
            android:layout_width="72dp"
            android:layout_height="72dp" />

        <EditText
            android:id="@+id/login_edit_username"
            android:layout_below="@id/login_icon"
            android:layout_marginTop="@dimen/distance_login_margin_to_top"
            android:layout_marginStart="@dimen/distance_edit_left_and_right_margin"
            android:layout_marginEnd="@dimen/distance_edit_left_and_right_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/login_edit_password"
            android:inputType="textPassword"
            android:layout_below="@id/login_edit_username"
            android:layout_marginTop="@dimen/distance_login_margin_to_top"
            android:layout_marginStart="@dimen/distance_edit_left_and_right_margin"
            android:layout_marginEnd="@dimen/distance_edit_left_and_right_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/login_btn_login"
            android:text="@string/title_btn_login"
            android:layout_below="@id/login_edit_password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/distance_login_margin_to_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>